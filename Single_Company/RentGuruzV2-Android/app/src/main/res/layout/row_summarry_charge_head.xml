<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sumarrydetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/ic_full_curve_box"
        android:backgroundTint="#F5F6F7"
        android:paddingTop="@dimen/_minus2sdp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:theme="@style/texttheme"
            android:id="@+id/chargename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_5sdp"
            android:text="Vehicle Charges"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:theme="@style/texttheme"
            android:id="@+id/charge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical|end"
            android:paddingEnd="@dimen/_5ssp"
            android:text="USD $ 836.59"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listsummarry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>