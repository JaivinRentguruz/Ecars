<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".flexiicar.user.Fragment_Agreement_DateChange">
    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.b2b.model.display.ThemeColors" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:backgroundTint="@{Color.parseColor(UiColor.secondary)}"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/test"
            android:orientation="vertical">
            <include
                android:id="@+id/header"
                app:UiColor="@{UiColor}"
                layout="@layout/row_header"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:background="@drawable/curve_box"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <include
                    android:id="@+id/reservation"
                    app:UiColor="@{UiColor}"
                    layout="@layout/reservation_list"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/startmargin"
                    android:orientation="vertical">
                <include
                    android:id="@+id/first"
                    app:UiColor="@{UiColor}"
                    layout="@layout/list_change_agreement"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/startmargin"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/vehicleclass"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toggle_selector_green"
                        android:clickable="true"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/textfont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" Change in Same Class"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/regtcolor"
                        android:textSize="@dimen/txt_font_size"
                        android:theme="@style/texttheme" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                    <ToggleButton
                        android:id="@+id/vehicleupgreade"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toggle_selector_green"
                        android:clickable="true"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/textfont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" Upgread Vehicle"
                        android:textStyle="bold"
                        android:gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/regtcolor"
                        android:textSize="@dimen/txt_font_size"
                        android:theme="@style/texttheme" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Vehicle"
                    android:theme="@style/texttheme"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="@dimen/startmargin"
                    android:textSize="@dimen/_11ssp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginHorizontal="@dimen/startmargin"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/vehicletype"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/spinner"
                        android:theme="@style/loginedit"
                        android:background="@drawable/ic_small_dropdown"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:imeOptions="actionNext"
                        android:nextFocusUp="@id/sp_Countrylist"
                        android:nextFocusDown="@id/cust_cityName"
                        android:windowSoftInputMode="stateHidden"
                        android:layout_marginRight="10dp"
                        />

                    <Spinner
                        android:id="@+id/vehiclelist"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/spinner"
                        android:theme="@style/loginedit"
                        android:background="@drawable/ic_small_dropdown"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:imeOptions="actionNext"
                        android:nextFocusUp="@id/sp_Countrylist"
                        android:nextFocusDown="@id/cust_cityName"
                        android:windowSoftInputMode="stateHidden"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Days, Mileage &amp; Charges"
                    android:theme="@style/texttheme"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="@dimen/startmargin"
                    android:textSize="@dimen/_11ssp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/startmargin"
                    android:orientation="vertical">
                    <include
                        android:id="@+id/second"
                        app:UiColor="@{UiColor}"
                        layout="@layout/list_change_agreement"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:theme="@style/texttheme"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="9.5"
                        android:layout_marginHorizontal="@dimen/startmargin"
                        android:text="Send Notification to Customer"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/textlightcolor"
                        android:textSize="@dimen/thirteen" />

                    <ToggleButton
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:id="@+id/customerinform"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toggle_selector_green"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <TextView
                    android:theme="@style/texttheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/startmargin"
                    android:layout_marginTop="5dp"
                    android:text="Notes "
                    android:textAllCaps="false"
                    android:textColor="@color/textlightcolor"
                    android:textSize="@dimen/thirteen" />


                <EditText
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/startmargin"
                    android:background="@drawable/ic_rectangle_for_note"
                    android:inputType="text"
                    android:maxLines="3"
                    android:minLines="3"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>



            <LinearLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottommenuheight"
                android:background="@color/bottommenucolor"
                android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
                android:layout_alignParentBottom="true"
                android:weightSum="10"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/startmargin">

                <LinearLayout
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/shortbtn"
                        android:backgroundTint="@{Color.parseColor(UiColor.secondary)}"
                        android:text="@string/save"/>
                    <!-- <TextView
                         android:theme="@style/texttheme"
                         android:id="@+id/text"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="center_vertical"
                         android:gravity="center"
                         android:text="@string/save"
                         android:textColor="@color/btntext"
                         style="@style/btntext"
                         android:textSize="@dimen/twenty" />-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pmt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:layout_weight="5">
                    <TextView
                        style="@style/shortbtn"
                        android:backgroundTint="@{Color.parseColor(UiColor.secondary)}"
                        android:text="Payment"/>

                </LinearLayout>
              <!--  <TextView
                    android:id="@+id/text"
                    style="@style/fullbtn"
                    android:text="@string/save"/>-->

            </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>