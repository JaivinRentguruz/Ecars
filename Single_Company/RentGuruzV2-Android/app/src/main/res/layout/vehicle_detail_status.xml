<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/opensummary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="15">

        <TextView
            android:id="@+id/txt_charges"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="14"
            android:gravity="left"

            android:text="@string/summary_of_charges"
            android:textColor="@color/regtcolor"
            android:theme="@style/texttheme" />

        <ImageView
            android:id="@+id/ArrowForSummary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/ic_arrow_icon" />

        <ImageView
            android:id="@+id/ArrowDownForSummary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/ic_down_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_Summaryofcharge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorHint" />

    <LinearLayout
        android:id="@+id/open_driver"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:weightSum="15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="14"
                android:gravity="left"
                android:text="@string/driver_details"
                android:textColor="@color/regtcolor"
                android:theme="@style/texttheme" />

            <ImageView
                android:id="@+id/driverdetails_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:src="@drawable/ic_arrow_icon" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/driver_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp"
            android:visibility="visible"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="20"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curve_single_text"
                    android:layout_margin="4dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/curve_single_text"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/first"
                            style="@style/textfont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20ssp" />

                        <TextView
                            android:id="@+id/second"
                            style="@style/textfont"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:text="L"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20ssp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="70"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textV_driverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neeraj Kaneria"
                    android:singleLine="true"
                    android:textColor="@color/regtcolor"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:theme="@style/texttheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_green_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_green_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_green_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_green_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_star_full" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/curve_single_text2">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/textfont"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_minus2sdp"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="E"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp"  />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <!-- <ImageView
                         android:layout_width="11dp"
                         android:layout_height="11dp"
                         android:layout_marginTop="3dp"
                         android:src="@drawable/ic_mail_icon_black" />-->

                    <TextView
                        android:id="@+id/TextV_DriverEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="mathewthomas@gmail.com"
                        android:textColor="@color/regtcolor"

                        android:textSize="@dimen/textsize_ten"
                        android:theme="@style/texttheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <!--   <ImageView
                           android:layout_width="11dp"
                           android:layout_height="11dp"
                           android:layout_marginTop="3dp"
                           android:src="@drawable/ic_call_icon" />-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="@drawable/curve_single_text2">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/textfont"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_minus2sdp"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="T"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp"  />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/TextV_DriverPhoneno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="444 888 9999"
                        android:textColor="@color/regtcolor"

                        android:textSize="@dimen/textsize_ten"
                        android:theme="@style/texttheme" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:src="@drawable/ic_green_call_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:src="@drawable/ic_blue_mail_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/textColorHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/flight_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone"
            android:weightSum="15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="14"
                android:gravity="left"
                android:text="@string/flight_details"
                android:textColor="@color/regtcolor"
                android:theme="@style/texttheme" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:src="@drawable/ic_arrow_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/showFlightDetail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp"
            android:visibility="gone"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="20"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curve_single_text"
                    android:backgroundTint="#DBEECF"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blue_plane"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="56"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Air Canada"
                        android:textColor="@color/regtcolor"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:theme="@style/texttheme" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EK778299"
                        android:layout_above="@+id/ticketdate"
                        android:textColor="@color/regtcolor"
                        android:textSize="13dp"
                        android:theme="@style/texttheme" />

                    <TextView
                        android:id="@+id/ticketdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mar 23, 2020 09:00 am"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/regtcolor"
                        android:textSize="13dp"
                        android:layout_marginBottom="4dp"
                        android:theme="@style/texttheme" />

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:visibility="gone"
                android:layout_weight="21">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_icon" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/textColorHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lblSelfCheckout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible"
                android:weightSum="15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="14"
                    android:gravity="left"

                    android:text="@string/self_checkout"
                    android:textAllCaps="false"
                    android:textColor="@color/regtcolor"
                    android:theme="@style/texttheme" />

                <ImageView
                    android:id="@+id/arrow_Selfcheckout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:src="@drawable/ic_arrow_icon" />

                <ImageView
                    android:id="@+id/arrow_Selfcheckout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:src="@drawable/ic_down_arrow"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkouts"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:visibility="visible"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="20"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/curve_single_text"
                        android:backgroundTint="#08C47C"
                        android:layout_margin="4dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/checkcarimage"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="70"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/carstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check Out Status"
                            android:textColor="@color/regtcolor"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            android:theme="@style/texttheme" />



                        <TextView
                            android:id="@+id/carcheckoutstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Self checkout is available 24 hours prior tothe checkout time. We will notify you as soon the self checkout is available.  "
                            android:maxLines="3"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/regtcolor"
                            android:textSize="13dp"
                            android:layout_marginBottom="4dp"
                            android:justificationMode="inter_word"
                            android:theme="@style/texttheme" />

                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:visibility="gone"
                    android:layout_weight="8">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_icon" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layout_SelfCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/selfCheckOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="22"
                    android:gravity="center"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_red_bg"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cross_symbol" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="68"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not Available at this time"

                        android:textColor="@color/regtcolor"
                        android:textSize="13dp"
                        android:theme="@style/texttheme" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Self checkout is available 24 hours prior tothe checkout time. We will notify you as soon the self checkout is available.  "

                        android:textSize="12dp"
                        android:theme="@style/texttheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:src="@drawable/ic_arrow_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layout_SelfCheckoutGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="11">

                <LinearLayout
                    android:id="@+id/Cross_SymbolGreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:src="@drawable/green_success_img" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checkout Available"

                        android:textColor="@color/regtcolor"
                        android:textSize="13dp"
                        android:theme="@style/texttheme" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Please Complete Your Process"

                        android:textSize="12dp"
                        android:theme="@style/texttheme" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ArrowselfcheckOut"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_icon" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/term_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:weightSum="15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="14"
                android:gravity="center_vertical"

                android:text="@string/terms_amp_conditions"
                android:textColor="@color/regtcolor"
                android:theme="@style/texttheme" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:src="@drawable/ic_arrow_icon" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>