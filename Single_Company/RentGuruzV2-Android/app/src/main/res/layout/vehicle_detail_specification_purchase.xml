<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="Vehicle"
            type="com.rentguruz.app.b2b.model.response.VehicleModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Purchase By" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@{}" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Pre Tax Amount" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:_value="@{Vehicle.TotalAmount}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Paid By" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@{Vehicle.VehiclePurchaseDetailsModel.PaidBy}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Date Of Payment" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@{Vehicle.VehiclePurchaseDetailsModel.DateOfPayment}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Amount Paid Monthly" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:_value="@{Vehicle.VehiclePurchaseDetailsModel.AmountMonthly}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Annual Miles Allowed" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@{String.valueOf( Vehicle.VehiclePurchaseDetailsModel.AnnualMilesAllowed)}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Down Payment" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:_value="@{Vehicle.VehiclePurchaseDetailsModel.DownPayment}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Tax Amount" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:_value="@{Vehicle.VehiclePurchaseDetailsModel.TaxAmount}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Total Amount" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:_value="@{Vehicle.VehiclePurchaseDetailsModel.TotalAmount}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Approved By" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@{Vehicle.VehiclePurchaseDetailsModel.CompanyName}"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/vehicle_specification_detail_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Purchase Copy" />

        <TextView
            style="@style/vehicle_specification_detail_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="View"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txtBlack" />



