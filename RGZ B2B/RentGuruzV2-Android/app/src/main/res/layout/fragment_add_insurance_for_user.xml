                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_main_camera"
                        app:tint="@color/green" />
                </LinearLayout>-->

                <RelativeLayout
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custome_cam_select">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"/>

                    <!--   <com.sdsmdg.harjot.vectormaster.VectorMasterView
                           android:id="@+id/test"
                           android:layout_width="match_parent"
                           android:layout_height="180dp"
                           android:scaleX="1"
                           android:scaleY="1"
                           app:vector_src="@drawable/custome_cam_select"/>-->



                </RelativeLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/sucessfull_regi"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/successful_bg"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <include
                    android:id="@+id/option"
                    app:UiColor="@{UiColor}"
                    layout="@layout/imageoption"/>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>