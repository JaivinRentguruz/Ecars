<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selected_dot"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center_vertical"
            android:id="@+id/llWelcomeNote"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backTofrogetpass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_chevron_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="17dp"
                        android:text="Reset password"
                        android:textAllCaps="false"

                        android:textColor="@color/TitleTextColor"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="left"

                    android:gravity="bottom"
                    android:text="Reset Password"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_below="@id/llWelcomeNote"
        android:background="@drawable/curve_box">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_black_bg"
                    android:layout_width="95dp"
                    android:layout_height="95dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/regular_logo" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Reset Code *"
                android:textAllCaps="false"
                android:textColor="@color/registerTextColor"

                android:textSize="@dimen/txt_font_size" />

            <EditText
                android:id="@+id/edt_ResetCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/ic_rectanglebox_215"

                android:textColor="@color/registerTextColor"
                android:paddingTop="8dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="15dp"
                android:hint="Enter an Code"
                android:textSize="@dimen/edt_font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="NEW Password *"
                    android:textAllCaps="false"
                    android:textColor="@color/registerTextColor"

                    android:textSize="@dimen/txt_font_size" />

                <EditText
                    android:id="@+id/NEWPASSWORD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_rectanglebox_215"

                    android:inputType="text"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="15dp"
                    android:hint="Enter New Password"
                    android:textColor="@color/registerTextColor"
                    android:textSize="@dimen/edt_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                <!--    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size"
                        android:text="*Note:"

                        android:layout_marginTop="10dp"/>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size"
                        android:layout_marginLeft="3dp"
                        android:text="@string/password_must"

                        android:layout_marginTop="10dp">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="Confirm NEW Password *"
                    android:textAllCaps="false"
                    android:textColor="@color/registerTextColor"

                    android:textSize="@dimen/txt_font_size" />

                <EditText
                    android:id="@+id/CONFIRMPASS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_rectanglebox_215"

                    android:textColor="@color/registerTextColor"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:hint="Re-Enter Password"
                    android:textSize="@dimen/edt_font_size" />
           </LinearLayout>
       </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lblREset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/footerButtonBC"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtprocess"
                    style="@style/fullbtn"
                    android:text="@string/save"/>
<!--
                <TextView
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="14dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textAllCaps="false"

                    android:textColor="@color/TitleTextColor"/>-->

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>