<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.b2b.galadariauto.model.display.ThemeColors" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:backgroundTint="@{Color.parseColor(UiColor.secondary)}">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/header"
            app:UiColor="@{UiColor}"
            layout="@layout/row_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:background="@drawable/curve_box_light_green_bg"
            android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
            android:paddingTop="14dp">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/car"
                    app:UiColor="@{UiColor}"
                    layout="@layout/do_carimg_3"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/damage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingVertical="3dp"
                            android:text="@string/damage"
                            android:textColor="@color/txtBlack" />

                        <TextView
                            android:id="@+id/basic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingVertical="3dp"
                            android:text="@string/basic"
                            android:textColor="@color/txtBlack" />

                        <TextView
                            android:id="@+id/detailed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingVertical="3dp"
                            android:text="@string/detailed"
                            android:textColor="@color/txtBlack" />

                        <TextView
                            android:id="@+id/report"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingVertical="3dp"
                            android:text="@string/report"
                            android:textColor="@color/txtBlack" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/txtBlack" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <include
                            layout="@layout/row_checkbox_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <include
                                    android:layout_marginTop="5dp"
                                    layout="@layout/row_checkbox_4"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/txtBlack" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_rectangle_box_green"
                                        app:tint="@color/green" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="4dp"
                                        android:text="Issue or Damaged"
                                        android:textColor="@color/txtBlack"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_rectangle_box_green"
                                        app:tint="@color/red" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="4dp"
                                        android:text="Issue or Damaged"
                                        android:textColor="@color/txtBlack"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_rectangle_box_green"
                                        app:tint="@color/backgroundColor" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="4dp"
                                        android:text="Issue or Damaged"
                                        android:textColor="@color/txtBlack"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_rectangle_box_green"
                                        app:tint="@color/yellow" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="4dp"
                                        android:text="Issue or Damaged"
                                        android:textColor="@color/txtBlack"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/next"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginStart="5dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/curved_box_darkblue_4dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_light"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="@string/next"
                                android:textAllCaps="false"
                                android:textColor="@color/txtWhite"
                                android:textSize="@dimen/fifteen" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>