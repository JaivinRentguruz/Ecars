<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.b2b.galadariauto.model.display.ThemeColors" />


        <variable
            name="Insurance"
            type="com.rentguruz.app.b2b.galadariauto.model.reservation.ReservationInsurance" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_image1"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/call"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/aquamarine_blue_bg"
                android:backgroundTint="@{Color.parseColor(Insurance.ColorCode)}"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">


                <TextView
                    style="@style/textfont"
                    android:theme="@style/texttheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="237891"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="@{Insurance.Name}"
                    android:textColor="@color/btntext"
                    android:textSize="@dimen/fourteen" />
            </LinearLayout>

            <TextView
                android:theme="@style/texttheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:hint="@string/car_description"
                android:text="@{Insurance.Description}"
                android:justificationMode="inter_word" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <TextView
                        android:theme="@style/texttheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Per Day"
                        android:textColor="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="USD $ 7.85"
                            android:textColor="@color/grey"
                            app:_values="@{Double.valueOf(Insurance.PerDayCharge)}" />


                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  + 6% Tax "
                            android:textColor="@color/grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max "
                            android:textColor="@color/grey" />

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Max USD $ 50"
                            android:textColor="@color/grey"
                            app:_values="@{Double.valueOf(Insurance.ExcessCharge)}" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/aquamarine_blue_bg"
                    android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:theme="@style/texttheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="@color/white" />

                    <TextView
                        android:theme="@style/texttheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="USD $ 50.00"
                        android:textColor="@color/white"
                        app:_values="@{Double.valueOf(Insurance.ReservationSummaryDetailModel.Total)}" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>