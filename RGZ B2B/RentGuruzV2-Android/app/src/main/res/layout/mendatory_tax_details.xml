<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="15">

        <RelativeLayout
            android:id="@+id/rl_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_circle_green"></ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_miscName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"

            android:text="Infant Car Seat"
            android:textColor="@color/selected_dot"
            android:textSize="16dp"
            android:theme="@style/texttheme" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="5"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                android:text="USD$ "
                android:textColor="@color/selected_dot"
                android:textSize="16dp"
                android:theme="@style/texttheme" />

            <TextView
                android:id="@+id/txt_miscAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                android:text="36.00"
                android:textColor="@color/selected_dot"
                android:textSize="16dp"
                android:theme="@style/texttheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch3"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:thumb="@drawable/toggle_selector_green"
                app:track="@drawable/custom_track" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txt_miscDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:text="Zero Deductible (US$ 25/Day)"

            android:textSize="@dimen/textsize_ten"
            android:theme="@style/texttheme" />
    </LinearLayout>
</LinearLayout>